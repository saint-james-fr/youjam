<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= "navbar-transparent" if params[:action] == "home" %> ">
  <div class="container align-items-normal">
    <%= link_to "/", class: "navbar-brand" do %>
      <h3>YouJam</h3>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Créer une Jam", new_jam_path, class: "nav-link primary-button", id: "addjambutton" %>
          </li>
          <li class="nav-item">
            <%= link_to "Toutes les jams", jams_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Mes messages", chatrooms_path, class: "nav-link" %>
          </li>
          <div class="user-infos">
            <li class="nav-item dropdown">
              <div class="dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown">
                <div class="user-name">
                  <%= current_user.first_name %> <%= current_user.last_name %>
                </div>
                <%= cl_image_tag current_user.avatar.key, class: "avatar ms-2" %>
              </div>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= link_to "Mes jams", dashboard_path, class: "dropdown-item" %>
                <%= link_to "Editer mon profil", edit_user_registration_path, class: "dropdown-item" %>
                <%= link_to "Se déconnecter", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
              </div>
            </li>
          </div>
        <% else %>
          <li class="nav-item">
            <%= link_to "S'identifier", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
