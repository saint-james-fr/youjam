<div class="jambanner">
  <div class="jambanner-image" style="background-image: linear-gradient(94.55deg, rgba(24, 7, 70, 0.35) 3.68%, rgba(24, 7, 70, 0) 53.68%), url('<%= cl_image_path jam.photo.key %>')">

  </div>
  <div class="jambanner-i-container">
    <div class="jambanner-i-date-time">
      <%= l(jam.jam_date, format:'%a. %-d %b %Y, %H:%M') %>
    </div>
    <div class="jambanner-i-t-l-container">
      <div class="jambanner-i-title-and-location">
        <div class="jambanner-i-title">
          <%= jam.title.capitalize %>
        </div>
        <div class="jambanner-i-location">
          <%= jam.location %>
        </div>
      </div>
      <div class="jambanner-i-button">
        <% unless jam.bookings.any?{|booking| booking.user_id == current_user.id} %>
          <%= render "bookings/new_booking", booking: @booking, jam: @jam %>
          <% if policy(jam).edit? %>
          <%= render "edit_jam", jam: @jam %>
          <% end %>
        <% else %>
          <div class="primary-button b-inactive"> Je Participe </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
