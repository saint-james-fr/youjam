<%= simple_form_for [jam],
                    html: {
                      data: {
                        controller: 'flatpickr'
                      }
                    } do |f| %>
    <%= f.input :title, label: 'Titre de la Jam' %>
    <%= f.input :description, label: 'Description' %>
    <%= f.input :jam_date, label: 'Sélectionner une date',
                as: :string,
                input_html: {
                  data: {
                    flatpickr_target: 'DateInput',
                  }
                } %>
    <%= f.input :capacity, label: 'Nombre de participants' %>
    <%= f.input :location, label: 'Adresse' %>
    <%= f.input :instruments_list,
          class: "form-select",
          label: 'Sélectionner les instruments recherchés',
          collection: @instruments,
          input_html: { multiple: true, data: {controller: "tom-select", tom_select_options_value: {tags: true, plugins: ['remove_button']}}} %>
    <%= f.input :photo, label: "Télécharger une photo d'illustration", as: :file %>
    <%= f.submit 'Créer ma Jam', class: 'primary-button w-100' %>
<% end %>
