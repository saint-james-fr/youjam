<div class="container">
  <div class="jams-index-search">
      <%= render 'form_search' %>
  </div>
  <% if @jams.count != 0 %>
    <div class="jams-content">
      <div class="jams-index-cards">
        <% @jams.each do |jam| %>
          <%= render "shared/jam_card", jam: jam %>
        <% end %>
      </div>
      <div class="map"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  <% else %>
    <h2 class="message-error-index">Aucune jam ne correspond Ã  votre recherche.</h2>
  <% end %>
</div>


