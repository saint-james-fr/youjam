<div class="container-home">
  <div class="banner" style="background-image: linear-gradient(180deg, rgba(41,34,162,0.5) 0%, rgba(41,34,162,0.5) 100%), url(<%= asset_path 'banner' %>);">
    <div class="container">
      <h4 class="pt-5" style="color: white">Rencontre des musiciens, collabore avec eux !</h4>
      <div class="d-flex ml-1 mr-1">
      <%= render "jams/form_search" %>
      </div>
    </div>
  </div>
  <div class="container mt-5 mb-2">
    <h2>Les Jams les plus populaires</h2>
    <div class="jam-cards mt-4">
      <% @jams.first(4).each do |jam| %>
        <%= render "shared/jam_card", jam: jam %>
      <% end %>
    </div>
  </div>
  <div class="container mt-5 mb-5">
    <h2>Rencontre des Jammers</h2>
    <div class="jammer-cards mt-4">
      <% @users.each do |user| %>
            <%= render "shared/jammer_card", user: user %>
        <% end %>
    </div>
  </div>
</div>
