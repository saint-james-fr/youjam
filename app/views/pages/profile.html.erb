<div class="container mb-5">
  <div class="card-profile">
    <div class="profile-infos">
      <div>
      <%= cl_image_tag @user.avatar.key, class: "avatar" %>
        <div class="socials">
          <a href="<%= @user.spotify_account %>"><i class="fa-brands fa-spotify"></i></a>
          <a href="<%= @user.instagram_url %>"><i class="fab fa-instagram"></i></a>
          <a href="https://open.spotify.com/user/<%= @user.soundcloud_url %>"><i class="fab fa-soundcloud"></i></a>
        </div>
      </div>
      <div class="profile-details">
        <p class="information-title"><%= @user.first_name%> <%= @user.last_name %></p>
        <p><%= @user.location %></p>
        <div class="profile-instruments-tags">
          <% @user.instruments.each do |instrument| %>
            <p class="tag tag-instruments"><%= instrument.name  %></p>
          <% end %>
        </div>
        <div class="profile-genres-tags">
            <% @user.genres.each do |genre| %>
            <p class="tag tag-genres"><%= genre.name  %></p>
          <% end %>
        </div>
      </div>
      <div class="profile-description">
        <p><%= @user.description %></p>
      </div>
    </div>
  </div>
  <div class="user-creations mt-5 mb-5">
    <% @user.creations.each do |creation| %>
    <div>
      <iframe width="auto" height="auto" loading="lazy" src="<%= creation.creation_url %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    <% end %>
  </div>
