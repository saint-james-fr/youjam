<button class="primary-button" data-bs-toggle="modal" data-bs-target="#reviewModal"> Publier un message </button>

<div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true" data-jam-subscription-target="modal">
  <div class="modal-dialog modal-dialog-centered ">
    <div class="modal-content">
        <div class="modal-header modale">
          <%= cl_image_tag current_user.avatar.key, class: "avatar" %>
          <h2 class="modal-title fs-5" id="postModalLabel">Publier une review</h2>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body modale" data-jam-subscription-target="form">
          <%= simple_form_for [jam, post],
          html: { data: { action: "turbo:submit-end->jam-subscription#resetForm" } } do |f| %>

            <%= f.input :content, as: :text, label: false, placeholder: "Mon message" %>

            <%= f.button :submit, class: "modal-submit", value: "Publier mon message" %>
          <% end %>
        </div>
    </div>
  </div>
</div>
